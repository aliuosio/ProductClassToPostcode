<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="assemblyservice_product_class" resource="default" engine="innodb">
        <column xsi:type="int" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="int" name="class_id" padding="6" unsigned="true" nullable="false"
                comment="Class ID"/>
        <column xsi:type="int" name="postcode" padding="6" unsigned="true" nullable="false" comment="Postcode"/>
        <column xsi:type="decimal" name="price" scale="4" precision="12" nullable="false" comment="Price"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="BIWAC_PRODUCT_CLASS_ID_IDX" indexType="btree">
            <column name="class_id"/>
        </index>
        <index referenceId="BIWAC_PRODUCT_POSTCODE_IDX" indexType="btree">
            <column name="postcode"/>
        </index>
    </table>
</schema>
